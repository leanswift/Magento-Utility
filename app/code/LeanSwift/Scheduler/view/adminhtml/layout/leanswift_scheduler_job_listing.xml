<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- BUTTONS/ACTIONS SECTION -->
        <referenceContainer name="page.main.actions">
            <!-- RUN TASKS AND GENERATE SCHEDULE -->
            <block class="LeanSwift\Scheduler\Block\Adminhtml\Job\Listing\Actions"
                   name="leanswift_scheduler_job_listing_actions"/>
        </referenceContainer>
        <!-- MAIN CONTENT -->
        <referenceContainer name="content">
            <!-- JOB LISTING -->
            <uiComponent name="leanswift_scheduler_job_listing"/>
        </referenceContainer>
    </body>
</page>